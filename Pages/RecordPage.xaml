<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NET_MAUI_BLE.Pages.RecordPage"
             xmlns:viewmodel="clr-namespace:NET_MAUI_BLE.ViewModel"
             x:DataType="viewmodel:RecordViewModel">
<ContentPage.Behaviors>
    <mct:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing" />
    <mct:EventToCommandBehavior Command="{Binding DisappearingCommand}" EventName="Disappearing" />
</ContentPage.Behaviors>
    <Grid RowDefinitions="20, *"
          Padding="10">
        <Grid Grid.Row="1"
              ColumnDefinitions="*, *"
              VerticalOptions="End">
            <Frame Grid.Column="0">
                <Button Text="Share"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RecordViewModel}}, Path=ShareCommand}"
                        CommandParameter="{Binding RecordId}"/>
            </Frame>
            <Frame Grid.Column="1">
                <Button Text="{Binding PlayText}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RecordViewModel}}, Path=PlayCommand}"
                        CommandParameter="{Binding RecordId}"/>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
