<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NET_MAUI_BLE.Pages.RecordPage"
             xmlns:viewmodel="clr-namespace:NET_MAUI_BLE.ViewModel"
             x:DataType="viewmodel:RecordViewModel">
    <Grid RowDefinitions="100, Auto, *"
          ColumnDefinitions=".75*, .25*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">
        <Label Text="Title: RecordPage"
                HorizontalOptions="Center"
                Grid.Row="0"
                Grid.Column="0" />
        <Label Text="{Binding Text}"
                HorizontalOptions="Center"
                Grid.Row="1"
                Grid.Column="0" />
        <Button Text="Play"
                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RecordViewModel}}, Path=PlayCommand}"
                CommandParameter="{Binding Text}" 
                Grid.Row="1"
                Grid.Column="1" />
    </Grid>
</ContentPage>
