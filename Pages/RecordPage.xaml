<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NET_MAUI_BLE.Pages.RecordPage"
             xmlns:viewmodel="clr-namespace:NET_MAUI_BLE.ViewModel"
             x:DataType="viewmodel:RecordViewModel">
    <Grid Padding="10">
        <Label Text="{Binding Text}"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Grid.Row="0"/>
        <Grid Grid.Row="1"
              ColumnDefinitions="*, *"
              VerticalOptions="End">
            <Frame Grid.Column="0">
                <Button Text="Share"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RecordViewModel}}, Path=ShareCommand}"
                        CommandParameter="{Binding Text}"/>
            </Frame>
            <Frame Grid.Column="1">
                <Button Text="Play"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RecordViewModel}}, Path=PlayCommand}"
                        CommandParameter="{Binding Text}"/>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
