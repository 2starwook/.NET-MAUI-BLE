<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:NET_MAUI_BLE.Controls"
             x:Class="NET_MAUI_BLE.Pages.WifiPage">
    <StackLayout Margin="20"
                 Spacing="6">
        <Button Text="Get audio file"
                WidthRequest="200"
                Command="{Binding GetAudioCommand}"/>
        <controls:AudioControl Source="{Binding AudioSource}"
                               IsVisible="{Binding AudioControlVisible}"/>
    </StackLayout>
    
</ContentPage>
